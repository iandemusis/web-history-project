+ 
+   if ( host != NULL && Rdata.no_proxy != NULL ) {
+     int i;
+     char *s, *e;
+     char  h[1024],
+          np[1024]; /* Ok - Not really nice. */
+ 
+     strcpy( h, host );
+     strcpy( np, Rdata.no_proxy );
+ 
+     /* lower-case only  */
+     for( i=0; h[i] != 0; i++ )
+       h[i] = tolower( h[i] );
+     for( i=0; np[i] != 0; i++ )
+       np[i] = tolower( np[i] );
+ 
+     s = np;
+     while ( s ) {
+       e = strchr( s, ':' );
+       if ( e ) {
+         *e = 0;
+         e++;
+       }
+       if( strstr( h, s )) {
+         return((char *)NULL);
+       }
+       s = e;
+     }
+   }
+ 
+ /**************** End of NoProxy *****************/
+ 
  	if (access == NULL)
  	{
  		return((char *)NULL);
