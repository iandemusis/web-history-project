	...
Server:
	401 Unauthorized
	WWW-Authenticate: Basic realm="burgers_and_fries"
	WWW-Realm-Partial: /protected/recipies/, /protected/foods/
	...
Client:
	GET /protected/recipies/secret-sauce/ingredients HTML/1.0
	Authorization: Basic mickeyd:passwd
	...

